<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BatteryGear" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/dark_blue</item>
        <item name="android:windowBackground">@color/dark_blue</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="CustomShapeAppearance">
        <item name="neumorph_cornerSize">10dp</item>
    </style>

    <style name="CustomShapeAppearanceAnimator">
        <item name="cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/_250sdp</item>
    </style>

    <style name="CustomShapeAppearanceVC">
        <item name="cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">0dp</item>
    </style>

</resources>
